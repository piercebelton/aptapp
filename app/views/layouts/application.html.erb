<!DOCTYPE html>
<html>
  <head>
    <title>Aptapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyDZxZEmeCSXjNV5Am4HTpOmJzEWNDD6uB8"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src="//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" type="text/javascript"></script>
  </head>

  <body>
    <p>
      <%= if !current_user.nil?
            current_user.email + ' (' + current_user.roles.pluck(:name).join(",") + ')'
          end %>
    </p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= link_to "Log In", new_user_session_path %>
    <% if user_signed_in? %>
      <%= link_to "Log Out", destroy_user_session_path, :method => :delete %>
    <% end %>
    <%= link_to "Sign Up", new_user_registration_path %>
    <%= link_to "Log in with Twitter", user_twitter_omniauth_authorize_path %>

    <%= yield %>
  </body>
</html>
